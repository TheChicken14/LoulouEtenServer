// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(255)
  email       String    @unique @db.VarChar(255)
  googleId    String    @db.VarChar(255)
  appleId     String    @db.VarChar(255)
  createdAt   DateTime  @default(now()) @db.Timestamp(6)
  pets        Pet[]
  foodItems   Food[]
  invitations Invitation[]
  qrCodes     QrCode[]
  devices     Device[]
}

model Pet {
  id          Int    @id @default(autoincrement())
  name        String @db.VarChar(255)
  owners      User[]
  foodItems   Food[]
  invitations Invitation[]
  qrCodes     QrCode[]
  profile     PetProfile?
}

model PetProfile {
  id          Int     @id @default(autoincrement())
  pet         Pet     @relation(fields: [petId], references: [id])
  petId       Int

  birthday    DateTime?
  
  morningFood String  @db.VarChar(255) @default("")
  dinnerFood  String  @db.VarChar(255) @default("")
  extraNotes  String  @db.VarChar(255) @default("")

  pictureName String? @db.VarChar(255)
}

model Food {
  id    Int       @id @default(autoincrement())
  by    User      @relation(fields: [byId], references: [id])
  byId  Int
  for   Pet       @relation(fields: [forId], references: [id])
  forId Int
  date  DateTime  @default(now()) @db.Timestamp(6)
  type  String    @db.VarChar(255)
}

model Invitation {
  id              Int    @id @default(autoincrement())
  invitationCode  String @db.VarChar(255)
  from            User   @relation(fields: [fromId], references: [id])
  fromId          Int
  pet             Pet    @relation(fields: [petId], references: [id])
  petId           Int
}

model QrCode {
  id        Int @id @default(autoincrement())
  type      String @db.VarChar(255)

  pet       Pet @relation(fields: [petId], references: [id])
  petId     Int

  user      User @relation(fields: [userId], references: [id])
  userId    Int

  createdAt DateTime  @default(now()) @db.Timestamp(6)
}

model Device {
  id        Int    @id @default(autoincrement())
  name      String @db.VarChar(255)
  uuid      String @db.VarChar(255)
  fcmToken  String @db.VarChar(255)

  owner     User @relation(fields: [ownerId], references: [id])
  ownerId   Int
}